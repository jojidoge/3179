{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 250,
  "title": "Total Forest Area Burnt by Fires as at April 2020",
  "data": {
    "url": "https://raw.githubusercontent.com/jojidoge/3179/refs/heads/main/bushfire_burnt_prop.csv"
  },
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "axis": {"labelAngle": 45}
    },
    "y": {
      "field": "Burnt_Prop",
      "type": "quantitative",
      "title": "Burnt Area (Proportion)"
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "scale": {
        "domain": [
          "Australian Capital Territory",
          "New South Wales",
          "Victoria",
          "Western Australia",
          "South Australia",
          "Queensland",
          "Tasmania",
          "Northern Territory"
        ],
        "range": [
          "#ff6347",
          "#8b0000",
          "#cd853f",
          "#ffd700",
          "#ff4500",
          "#d62728",
          "#ff8c00",
          "#8b4513"
        ]
      }
    }
  },
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "tooltip": [
    {
      "field": "State",
      "type": "nominal",
      "title": "State"
    },
    {
      "field": "Burnt_Prop",
      "type": "quantitative",
      "title": "Burnt Area Proportion"
    }
  ]
}
