{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 300,
  "title": "Satellite Readings of Bushfires in Australia between August and September 2019",
  "params": [
    {
      "name": "zoom",
      "value": 605,
      "bind": {
        "input": "range",
        "min": 605,
        "max": 5000,
        "step": 5,
        "name": "Zoom Level"
      }
    },
    {
      "name": "cLng",
      "value": 132,
      "bind": {
        "input": "range",
        "min": 115,
        "max": 150,
        "name": "Pan Left/Right"
      }
    },
    {
      "name": "cLat",
      "value": -25,
      "bind": {
        "input": "range",
        "min": -45,
        "max": -12,
        "name": "Pan Up/Down",
        "orient": "vertical"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jojidoge/3179/refs/heads/main/ne_50m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jojidoge/3179/main/aussieBushFires.csv",
        "format": {
          "type": "csv"
        }
      },
      "mark": {
        "type": "circle",
        "tooltip": {
          "signal": "'Brightness: ' + datum.brightness + ', Date: ' + datum.acq_date + ', Time: ' + datum.acq_time"
        }
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "brightness",
          "type": "quantitative",
          "title": "Brightness",
          "scale": {
            "domain": [300, 500]
          }
        },
        "color": {
          "field": "brightness",
          "type": "quantitative",
          "title": "Brightness",
          "scale": {
            "domain": [300, 500],
            "range": ["lightyellow", "red"]
          }
        }
      },
      "transform": [
        {
          "calculate": "'Brightness: ' + datum.brightness + ', Date: ' + datum.acq_date + ', Time: ' + datum.acq_time",
          "as": "tooltipData"
        }
      ]
    }
  ],
  "projection": {
    "type": "equalEarth",
    "scale": {
      "signal": "zoom"
    },
    "center": {
      "signal": "[cLng, cLat]"
    }
  }
}
